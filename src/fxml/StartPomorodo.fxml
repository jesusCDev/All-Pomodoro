<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="100.0" minWidth="250.0" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StartPomorodoController">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnRest" mnemonicParsing="false" onAction="#resetBtn" text="Reset" />
            <Button fx:id="btnPlayAndPause" mnemonicParsing="false" onAction="#playPauseBtn" text="Play" />
            <Button fx:id="btnNext" mnemonicParsing="false" onAction="#skipBtn" text="Next" />
         </children>
      </HBox>
   </bottom>
   <center>
      <Label fx:id="lbTimer" text="25:00" BorderPane.alignment="CENTER">
         <font>
            <Font size="96.0" />
         </font>
      </Label>
   </center>
   <top>
      <Label text="All Pomorodo" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
